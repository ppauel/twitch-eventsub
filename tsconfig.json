{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "rootDir": "./src/",
        "target": "ES6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "strictPropertyInitialization": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}